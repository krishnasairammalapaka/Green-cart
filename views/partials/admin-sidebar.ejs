<div class="bg-green-600 text-white w-64 py-6 flex flex-col">
    <div class="px-6 mb-8 flex items-center">
        <svg class="w-8 h-8 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h1 class="text-2xl font-bold">Admin Panel</h1>
    </div>
    <nav class="flex-1 space-y-1">
        <a href="/admin/dashboard" 
           class="flex items-center px-6 py-3 hover:bg-green-700 <%= currentPage === 'dashboard' ? 'bg-green-700' : '' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path>
            </svg>
            <span>Dashboard</span>
        </a>

        <a href="/admin/vegetables" 
           class="flex items-center px-6 py-3 hover:bg-green-700 <%= currentPage === 'vegetables' ? 'bg-green-700' : '' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
            <span>Manage Vegetables</span>
        </a>

        <a href="/admin/orders" 
           class="flex items-center px-6 py-3 hover:bg-green-700 <%= currentPage === 'orders' ? 'bg-green-700' : '' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <div class="flex items-center justify-between flex-1">
                <span>Orders</span>
                <% if (typeof orderCount !== 'undefined' && orderCount > 0) { %>
                    <span class="ml-2 px-2 py-1 text-xs bg-green-700 rounded-full">
                        <%= orderCount %>
                    </span>
                <% } %>
            </div>
        </a>

        <a href="/admin/users" 
           class="flex items-center px-6 py-3 hover:bg-green-700 <%= currentPage === 'users' ? 'bg-green-700' : '' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <span>Users</span>
        </a>

        <a href="/admin/weather" 
           class="flex items-center px-6 py-3 hover:bg-green-700 <%= currentPage === 'weather' ? 'bg-green-700' : '' %>">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
            </svg>
            <span>Weather Info</span>
        </a>

        <div class="border-t border-green-700 my-2"></div>

        <a href="/admin/logout" 
           class="flex items-center px-6 py-3 hover:bg-green-700 text-red-200 hover:text-white transition-colors duration-300">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
            <span>Logout</span>
        </a>
    </nav>
</div>

<style>
    /* Hover animations */
    .flex-1 a {
        transition: all 0.3s ease;
    }

    .flex-1 a:hover {
        transform: translateX(5px);
    }

    /* Active link indicator */
    .flex-1 a.bg-green-700::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 60%;
        background-color: #fff;
        border-radius: 0 4px 4px 0;
    }

    /* Icon animations */
    .flex-1 a svg {
        transition: transform 0.3s ease;
    }

    .flex-1 a:hover svg {
        transform: scale(1.1);
    }

    /* Badge animations */
    @keyframes badgePulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.1); }
        100% { transform: scale(1); }
    }

    .rounded-full {
        animation: badgePulse 2s infinite;
    }
</style> 